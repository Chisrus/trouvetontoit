<script>
fetch('maisons.json')
  .then(response => response.json())
  .then(data => {
    const container = document.querySelector('#properties .grid');
    data.forEach(item => {
      const card = document.createElement('div');
      card.className = 'bg-white rounded-3xl overflow-hidden shadow-lg hover-lift';
      card.innerHTML = `
        <div class="w-full h-64 overflow-hidden rounded-t-3xl">
          <img src="${item.image}" alt="${item.title}" class="apartment-image">
        </div>
        <div class="p-6">
          <h3 class="text-2xl font-bold text-gray-800 mb-2">${item.title}</h3>
          <p class="text-gray-600 mb-4">${item.price}</p>
          <div class="flex items-center space-x-4 text-gray-500 mb-4">
            <span>${item.location}</span>
          </div>
          <button class="w-full bg-gradient-to-r from-cyan-500 to-purple-400 text-white p-3 rounded-full font-bold hover:from-cyan-600 hover:to-purple-500 transition duration-300 btn-neon-effect" onclick="window.open('${item.link}', '_blank')">Voir l'annonce</button>
        </div>
      `;
      container.appendChild(card);
    });
  });
</script>
